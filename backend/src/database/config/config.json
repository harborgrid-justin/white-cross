{
  "development": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "dialectOptions": {
      "ssl": false
    },
    "logging": true
  },
  "test": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "dialectOptions": {
      "ssl": false
    },
    "logging": false
  },
  "production": {
    "use_env_variable": "DATABASE_URL",
    "dialect": "postgres",
    "dialectOptions": {
      "ssl": {
        "require": true,
        "rejectUnauthorized": false
      },
      "statement_timeout": 60000,
      "idle_in_transaction_session_timeout": 120000
    },
    "pool": {
      "max": 10,
      "min": 2,
      "acquire": 60000,
      "idle": 30000
    },
    "logging": false
  }
}
