{{!-- Password Reset Email Template - Uses base template to eliminate duplication --}}
{{!-- Variables: name, resetUrl, expiresInHours --}}

{{> base.html.hbs
    pageTitle="Password Reset"
    headerSubtitle="Password Reset Request"
    title="Reset Your Password"
    content="<p>Hello {{name}},</p><p>We received a request to reset your password for your White Cross Healthcare account. Click the button below to create a new password:</p>"
    actionUrl=resetUrl
    actionText="Reset Password"
    buttonColor="#dc3545"
    additionalContent="<p>Or copy and paste this link into your browser:</p><p style='word-break: break-all; color: #007bff;'>{{resetUrl}}</p><div style='background-color: #fff3cd; border-left: 4px solid #ffc107; padding: 15px; margin: 20px 0; border-radius: 4px;'><strong>Important:</strong> This link will expire in {{expiresInHours}} hours for security reasons.</div><p><strong>Didn't request this?</strong></p><p>If you didn't request a password reset, you can safely ignore this email. Your password will remain unchanged.</p>"
    customStyles=".cta-button { padding: 15px 40px; }"
    footerContent="<p>For security reasons, never share your password reset link with anyone.</p>"
}}
