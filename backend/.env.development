# ================================================================================
# WHITE CROSS - DEVELOPMENT ENVIRONMENT
# ================================================================================
# This file contains development-specific environment variables
# Copy to .env.development.local for local overrides (not committed to git)
# ================================================================================

# ================================================================================
# APPLICATION CONFIGURATION
# ================================================================================
NODE_ENV=development
PORT=3001

# ================================================================================
# DATABASE CONFIGURATION
# ================================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=white_cross_dev
DB_PASSWORD=dev_password_change_me
DB_NAME=white_cross_dev
DB_NAME_TEST=white_cross_test
DB_SSL=false
DB_SYNC=false
DB_LOGGING=true

# Database pool configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# ================================================================================
# JWT & AUTHENTICATION
# ================================================================================
# SECURITY: Even in development, use strong secrets (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=dev-jwt-secret-minimum-32-chars-for-development-only
JWT_REFRESH_SECRET=dev-refresh-secret-minimum-32-chars-for-development-only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================================================================
# SECURITY CONFIGURATION
# ================================================================================
CSRF_SECRET=dev-csrf-secret-minimum-32-chars-for-development-only
CONFIG_ENCRYPTION_KEY=dev-config-encryption-key-minimum-32-chars-for-development
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_SIZE=32
ENCRYPTION_IV_SIZE=16
RSA_KEY_SIZE=4096
KEY_ROTATION_ENABLED=true
KEY_ROTATION_INTERVAL_DAYS=90

# ================================================================================
# CORS & NETWORKING
# ================================================================================
# Allow localhost origins in development
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ================================================================================
# REDIS CONFIGURATION
# ================================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_DB=0
REDIS_QUEUE_DB=1
REDIS_TTL_DEFAULT=300
REDIS_CONNECTION_TIMEOUT=5000
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# ================================================================================
# CACHE CONFIGURATION
# ================================================================================
CACHE_KEY_PREFIX=dev:cache
CACHE_ENABLE_COMPRESSION=false
CACHE_COMPRESSION_THRESHOLD=1024
CACHE_ENABLE_L1=true
CACHE_L1_MAX_SIZE=1000
CACHE_L1_TTL=60
CACHE_ENABLE_LOGGING=true
CACHE_WARMING_ENABLED=false
CACHE_MAX_SIZE=1000
CACHE_DEFAULT_TTL=300000

# ================================================================================
# QUEUE CONFIGURATION
# ================================================================================
QUEUE_CONCURRENCY_DELIVERY=10
QUEUE_CONCURRENCY_NOTIFICATION=15
QUEUE_CONCURRENCY_ENCRYPTION=5
QUEUE_CONCURRENCY_INDEXING=3
QUEUE_CONCURRENCY_BATCH=2
QUEUE_CONCURRENCY_CLEANUP=1

# ================================================================================
# WEBSOCKET CONFIGURATION
# ================================================================================
WS_PORT=3002
WS_PATH=/socket.io
WS_CORS_ORIGIN=http://localhost:3000
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
ENABLE_REDIS_ADAPTER=true

# ================================================================================
# LOGGING & MONITORING
# ================================================================================
LOG_LEVEL=debug
SENTRY_DSN=
REQUEST_TIMEOUT=30000

# ================================================================================
# AWS CONFIGURATION (Optional for local development)
# ================================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_SECRET_NAME=

# ================================================================================
# FEATURE FLAGS
# ================================================================================
FEATURES_ENABLE_AI_SEARCH=false
FEATURES_ENABLE_ANALYTICS=true
FEATURES_ENABLE_WEBSOCKET=true

# ================================================================================
# DEVELOPMENT TOOLS
# ================================================================================
# Enable Docker mode (set to true when running in Docker)
DOCKER=false

# Enable GraphQL Playground
GRAPHQL_PLAYGROUND=true

# Enable Swagger documentation
SWAGGER_ENABLED=true

# ==============================================================================
# ERROR TRACKING & LOGGING
# ==============================================================================
# Sentry Error Tracking (leave empty for development, add DSN for staging/prod)
SENTRY_DSN=

# Logging Configuration
LOG_LEVEL=debug
ENABLE_DETAILED_ERRORS=true
