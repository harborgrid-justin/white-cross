{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "../dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["../src/*"],
      "@/types/*": ["../src/types/*"],
      "@/utils/*": ["../src/utils/*"],
      "@/middleware/*": ["../src/middleware/*"],
      "@/routes/*": ["../src/routes/*"],
      "@/services/*": ["../src/services/*"],
      "@/controllers/*": ["../src/controllers/*"]
    }
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "../node_modules",
    "../dist"
  ]
}
