{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "collectCoverageFrom": [
    "../src/**/*.{ts,js}",
    "!../src/**/*.spec.ts",
    "!../src/**/*.e2e-spec.ts",
    "!../src/**/*.module.ts",
    "!../src/**/*.interface.ts",
    "!../src/**/*.dto.ts",
    "!../src/**/*.entity.ts",
    "!../src/**/*.model.ts",
    "!../src/main.ts",
    "!../src/cli.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/",
    "/dist/"
  ],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "verbose": true
}
