# ================================================================================
# WHITE CROSS - TEST ENVIRONMENT
# ================================================================================
# This file contains test-specific environment variables
# Used for automated testing (unit, integration, e2e)
# ================================================================================

# ================================================================================
# APPLICATION CONFIGURATION
# ================================================================================
NODE_ENV=test
PORT=3001

# ================================================================================
# DATABASE CONFIGURATION
# ================================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=white_cross_test
DB_PASSWORD=test_password
DB_NAME=white_cross_test
DB_NAME_TEST=white_cross_test
DB_SSL=false
DB_SYNC=true
DB_LOGGING=false

# Database pool configuration (smaller for tests)
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_ACQUIRE_TIMEOUT=10000
DB_IDLE_TIMEOUT=10000

# ================================================================================
# JWT & AUTHENTICATION
# ================================================================================
# Use consistent test secrets for reproducible tests
JWT_SECRET=test-jwt-secret-minimum-32-characters-for-testing-only
JWT_REFRESH_SECRET=test-refresh-secret-minimum-32-characters-for-testing-only
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ================================================================================
# SECURITY CONFIGURATION
# ================================================================================
CSRF_SECRET=test-csrf-secret-minimum-32-characters-for-testing-only
CONFIG_ENCRYPTION_KEY=test-config-encryption-key-minimum-32-characters
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_SIZE=32
ENCRYPTION_IV_SIZE=16
RSA_KEY_SIZE=2048
KEY_ROTATION_ENABLED=false
KEY_ROTATION_INTERVAL_DAYS=90

# ================================================================================
# CORS & NETWORKING
# ================================================================================
CORS_ORIGIN=http://localhost:3000

# ================================================================================
# REDIS CONFIGURATION
# ================================================================================
# Use separate Redis database for tests
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_DB=15
REDIS_QUEUE_DB=14
REDIS_TTL_DEFAULT=60
REDIS_CONNECTION_TIMEOUT=5000
REDIS_MAX_RETRIES=1
REDIS_RETRY_DELAY=100

# ================================================================================
# CACHE CONFIGURATION
# ================================================================================
CACHE_KEY_PREFIX=test:cache
CACHE_ENABLE_COMPRESSION=false
CACHE_COMPRESSION_THRESHOLD=1024
CACHE_ENABLE_L1=false
CACHE_L1_MAX_SIZE=100
CACHE_L1_TTL=30
CACHE_ENABLE_LOGGING=false
CACHE_WARMING_ENABLED=false
CACHE_MAX_SIZE=100
CACHE_DEFAULT_TTL=60000

# ================================================================================
# QUEUE CONFIGURATION
# ================================================================================
QUEUE_CONCURRENCY_DELIVERY=1
QUEUE_CONCURRENCY_NOTIFICATION=1
QUEUE_CONCURRENCY_ENCRYPTION=1
QUEUE_CONCURRENCY_INDEXING=1
QUEUE_CONCURRENCY_BATCH=1
QUEUE_CONCURRENCY_CLEANUP=1

# ================================================================================
# WEBSOCKET CONFIGURATION
# ================================================================================
WS_PORT=3003
WS_PATH=/socket.io
WS_CORS_ORIGIN=http://localhost:3000
WS_PING_TIMEOUT=10000
WS_PING_INTERVAL=5000
ENABLE_REDIS_ADAPTER=false

# ================================================================================
# LOGGING & MONITORING
# ================================================================================
LOG_LEVEL=error
SENTRY_DSN=
REQUEST_TIMEOUT=10000

# ================================================================================
# AWS CONFIGURATION (Mock for tests)
# ================================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_SECRET_NAME=

# ================================================================================
# FEATURE FLAGS
# ================================================================================
FEATURES_ENABLE_AI_SEARCH=false
FEATURES_ENABLE_ANALYTICS=false
FEATURES_ENABLE_WEBSOCKET=false

# ================================================================================
# TEST FLAGS
# ================================================================================
DOCKER=false
GRAPHQL_PLAYGROUND=false
SWAGGER_ENABLED=false
