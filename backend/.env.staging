# ================================================================================
# WHITE CROSS - STAGING ENVIRONMENT
# ================================================================================
# This file contains staging-specific environment variables
# Staging should mirror production but with separate resources
# ================================================================================

# ================================================================================
# APPLICATION CONFIGURATION
# ================================================================================
NODE_ENV=staging
PORT=3000

# ================================================================================
# DATABASE CONFIGURATION
# ================================================================================
DB_HOST=${STAGING_DB_HOST}
DB_PORT=5432
DB_USERNAME=${STAGING_DB_USERNAME}
DB_PASSWORD=${STAGING_DB_PASSWORD}
DB_NAME=white_cross_staging
DB_SSL=true
DB_SYNC=false
DB_LOGGING=true

# Database pool configuration
DB_POOL_MIN=3
DB_POOL_MAX=15
DB_ACQUIRE_TIMEOUT=30000
DB_IDLE_TIMEOUT=30000

# ================================================================================
# JWT & AUTHENTICATION
# ================================================================================
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_REFRESH_SECRET=${STAGING_JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================================================================
# SECURITY CONFIGURATION
# ================================================================================
CSRF_SECRET=${STAGING_CSRF_SECRET}
CONFIG_ENCRYPTION_KEY=${STAGING_CONFIG_ENCRYPTION_KEY}
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_SIZE=32
ENCRYPTION_IV_SIZE=16
RSA_KEY_SIZE=4096
KEY_ROTATION_ENABLED=true
KEY_ROTATION_INTERVAL_DAYS=90

# ================================================================================
# CORS & NETWORKING
# ================================================================================
CORS_ORIGIN=${STAGING_CORS_ORIGIN}

# ================================================================================
# REDIS CONFIGURATION
# ================================================================================
REDIS_HOST=${STAGING_REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}
REDIS_USERNAME=${STAGING_REDIS_USERNAME}
REDIS_DB=0
REDIS_QUEUE_DB=1
REDIS_TTL_DEFAULT=300
REDIS_CONNECTION_TIMEOUT=5000
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=1000

# ================================================================================
# CACHE CONFIGURATION
# ================================================================================
CACHE_KEY_PREFIX=staging:cache
CACHE_ENABLE_COMPRESSION=true
CACHE_COMPRESSION_THRESHOLD=1024
CACHE_ENABLE_L1=true
CACHE_L1_MAX_SIZE=2000
CACHE_L1_TTL=60
CACHE_ENABLE_LOGGING=true
CACHE_WARMING_ENABLED=true
CACHE_MAX_SIZE=5000
CACHE_DEFAULT_TTL=300000

# ================================================================================
# QUEUE CONFIGURATION
# ================================================================================
QUEUE_CONCURRENCY_DELIVERY=15
QUEUE_CONCURRENCY_NOTIFICATION=20
QUEUE_CONCURRENCY_ENCRYPTION=8
QUEUE_CONCURRENCY_INDEXING=4
QUEUE_CONCURRENCY_BATCH=2
QUEUE_CONCURRENCY_CLEANUP=1

# ================================================================================
# WEBSOCKET CONFIGURATION
# ================================================================================
WS_PORT=3002
WS_PATH=/socket.io
WS_CORS_ORIGIN=${STAGING_CORS_ORIGIN}
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000
ENABLE_REDIS_ADAPTER=true

# ================================================================================
# LOGGING & MONITORING
# ================================================================================
LOG_LEVEL=debug
SENTRY_DSN=${STAGING_SENTRY_DSN}
REQUEST_TIMEOUT=30000

# ================================================================================
# AWS CONFIGURATION
# ================================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${STAGING_AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${STAGING_AWS_SECRET_ACCESS_KEY}
AWS_S3_BUCKET=${STAGING_AWS_S3_BUCKET}
AWS_SECRET_NAME=white-cross/staging

# ================================================================================
# FEATURE FLAGS
# ================================================================================
FEATURES_ENABLE_AI_SEARCH=true
FEATURES_ENABLE_ANALYTICS=true
FEATURES_ENABLE_WEBSOCKET=true

# ================================================================================
# STAGING FLAGS
# ================================================================================
DOCKER=true
GRAPHQL_PLAYGROUND=true
SWAGGER_ENABLED=true

# ==============================================================================
# ERROR TRACKING & LOGGING
# ==============================================================================
# Sentry Error Tracking
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID

# Logging Configuration
LOG_LEVEL=info
ENABLE_DETAILED_ERRORS=true
