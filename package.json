{
  "name": "white-cross",
  "version": "1.0.0",
  "description": "Enterprise grade platform for school nurses to manage student medications and contacts",
  "main": "index.js",
  "scripts": {
    "// Development": "========================================",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend-only": "npm run dev:backend",
    "dev:frontend-only": "npm run dev:frontend",
    "// Production": "========================================",
    "start": "npm run start:backend && npm run start:frontend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm run preview",
    "// Build": "========================================",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "clean": "rimraf backend/dist frontend/dist node_modules/.cache",
    "clean:all": "npm run clean && rimraf node_modules backend/node_modules frontend/node_modules",
    "// Testing": "========================================",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:e2e:headed": "cd frontend && npm run test:e2e:headed",
    "test:coverage": "npm run test:backend -- --coverage && npm run test:frontend -- --coverage",
    "test:api-integration": "npx playwright test --config=playwright.config.ts",
    "test:api-integration:ui": "npx playwright test --config=playwright.config.ts --ui",
    "test:api-integration:debug": "npx playwright test --config=playwright.config.ts --debug",
    "test:api-integration:report": "npx playwright show-report playwright-report/api-integration",
    "test:parallel-verify": "npx playwright test --config=playwright.config.simple.ts",
    "// Linting": "========================================",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:fix": "npm run lint:backend -- --fix && npm run lint:frontend -- --fix",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "type-check": "npm run type-check:backend && npm run type-check:frontend",
    "type-check:backend": "cd backend && npm run build",
    "type-check:frontend": "cd frontend && npm run type-check",
    "// Database": "========================================",
    "db:migrate": "cd backend && npx sequelize-cli db:migrate",
    "db:migrate:undo": "cd backend && npx sequelize-cli db:migrate:undo",
    "db:migrate:status": "cd backend && npx sequelize-cli db:migrate:status",
    "db:seed": "cd backend && npm run seed",
    "db:seed:all": "cd backend && npx sequelize-cli db:seed:all",
    "db:seed:undo": "cd backend && npx sequelize-cli db:seed:undo",
    "db:reset": "npm run db:migrate:undo && npm run db:migrate && npm run db:seed",
    "// Setup & Install": "========================================",
    "setup": "npm install && npm run install:all",
    "install:all": "cd backend && npm install && cd ../frontend && npm install",
    "postinstall": "echo '\nâœ… Dependencies installed! Run npm run dev to start development.\n'",
    "// Utilities": "========================================",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "check:all": "npm run lint && npm run type-check && npm run test",
    "screenshots": "npx tsx scripts/generate-screenshots.ts",
    "screenshots:help": "echo 'Generate screenshots of all user-accessible pages. Requires backend and frontend to be running. Run: npm run dev (in another terminal) then npm run screenshots'"
  },
  "keywords": [
    "healthcare",
    "school-nurse",
    "medication-management",
    "student-health",
    "enterprise",
    "healthcare-platform"
  ],
  "author": "HarborGrid",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.1",
    "concurrently": "9.2.1",
    "cross-env": "10.1.0",
    "prettier": "^3.6.2",
    "rimraf": "6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "wait-on": "9.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "playwright": "^1.56.1"
  }
}
