# =============================================================================
# White Cross Healthcare Platform - Next.js Development Dockerfile
# Optimized for development with hot reload and debugging capabilities
# =============================================================================

# -----------------------------------------------------------------------------
# Stage 1: Development Base
# -----------------------------------------------------------------------------
FROM node:20-alpine AS development

# Install development tools and dependencies
RUN apk add --no-cache \
    curl \
    git \
    openssh \
    && rm -rf /var/cache/apk/*

# Create app directory
WORKDIR /app

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nextjs -u 1001 -G nodejs

# Copy package files
COPY package*.json ./

# Install dependencies (including dev dependencies)
RUN npm install && \
    npm cache clean --force

# Copy application source
COPY --chown=nextjs:nodejs . .

# Create necessary directories with proper permissions
RUN mkdir -p .next && chown -R nextjs:nodejs .next && \
    mkdir -p logs && chown -R nextjs:nodejs logs

# Switch to non-root user
USER nextjs

# Expose port
EXPOSE 3000

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD curl -f http://localhost:3000/api/health || exit 1

# Development command with hot reload
CMD ["npm", "run", "dev"]

# -----------------------------------------------------------------------------
# Stage 2: Build Dependencies (All dependencies for building)
# -----------------------------------------------------------------------------
FROM node:20-alpine AS deps-build

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install ALL dependencies (including devDependencies) for building
RUN --mount=type=cache,target=/root/.npm \
    npm install && \
    npm cache clean --force

# -----------------------------------------------------------------------------
# Stage 3: Production Dependencies
# -----------------------------------------------------------------------------
FROM node:20-alpine AS deps-prod

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install only production dependencies for runtime
RUN --mount=type=cache,target=/root/.npm \
    npm install --only=production && \
    npm cache clean --force

# -----------------------------------------------------------------------------
# Stage 4: Builder
# -----------------------------------------------------------------------------
FROM node:20-alpine AS builder

WORKDIR /app

# Copy ALL dependencies from deps-build stage (needed for build)
COPY --from=deps-build /app/node_modules ./node_modules

# Copy application source
COPY . .

# Set build-time environment variables
ARG NEXT_PUBLIC_API_URL=http://backend:3001/api/v1
ARG NEXT_PUBLIC_ENVIRONMENT=production

ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_API_BASE_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_ENVIRONMENT=$NEXT_PUBLIC_ENVIRONMENT
ENV NEXT_TELEMETRY_DISABLED=1

# Skip build in development - Next.js will build on-demand
# RUN npm run build

# -----------------------------------------------------------------------------
# Stage 5: Development Runner (no build required)
# -----------------------------------------------------------------------------
FROM node:20-alpine AS runner

# Security: Run as non-root user
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

WORKDIR /app

# Set development environment
ENV NODE_ENV=development
ENV NEXT_TELEMETRY_DISABLED=1

# Copy dependencies and source code
COPY --from=deps-build /app/node_modules ./node_modules
COPY --chown=nextjs:nodejs . .

# Create .next directory with proper ownership
RUN mkdir -p .next && chown -R nextjs:nodejs .next

# Switch to non-root user
USER nextjs

# Expose port
EXPOSE 3000

# Health check - simplified for development
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)}).on('error', () => process.exit(1))"

# Start Next.js development server
CMD ["npm", "run", "dev"]