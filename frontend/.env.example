# ===========================================
# WHITE CROSS HEALTHCARE PLATFORM
# Environment Configuration
# ===========================================

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000
VITE_API_HEALTH_ENDPOINT=/health

# Application Configuration
VITE_APP_TITLE="White Cross"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Enterprise grade platform for school nurses"
VITE_APP_ENVIRONMENT=development

# Environment
VITE_NODE_ENV=development
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Feature Flags
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_PWA=false
VITE_ENABLE_OFFLINE_MODE=false

# Security & Authentication
VITE_AUTH_SESSION_TIMEOUT=28800000
# Session timeout: 8 hours (28800000ms)
VITE_AUTH_TOKEN_REFRESH_BUFFER=300000
# Refresh token 5 minutes before expiry (300000ms)
VITE_CSRF_ENABLED=true
VITE_SECURE_STORAGE_ENABLED=true

# API Rate Limiting
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Caching & Persistence
VITE_CACHE_TTL=300000
VITE_ENABLE_API_CACHE=true
VITE_CACHE_MAX_SIZE=100
VITE_CACHE_MAX_MEMORY=52428800
# Max memory: 50MB (52428800 bytes)
VITE_ENABLE_QUERY_PERSISTENCE=true
VITE_PERSISTENCE_MAX_AGE=86400000
# Persistence max age: 24 hours (86400000ms)

# Audit Logging
VITE_ENABLE_AUDIT_LOGGING=true
VITE_AUDIT_BATCH_SIZE=10
VITE_AUDIT_BATCH_INTERVAL=30000
# Batch interval: 30 seconds (30000ms)
VITE_AUDIT_MAX_RETRIES=3
VITE_AUDIT_RETRY_DELAY=5000
# Retry delay: 5 seconds (5000ms)

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGGING=true
VITE_ENABLE_DEBUG_LOGGING=false

# Resilience & Health Monitoring
VITE_ENABLE_HEALTH_MONITORING=true
VITE_HEALTH_CHECK_INTERVAL=30000
# Health check interval: 30 seconds (30000ms)
VITE_CIRCUIT_BREAKER_THRESHOLD=5
VITE_CIRCUIT_BREAKER_TIMEOUT=60000
# Circuit breaker timeout: 60 seconds (60000ms)

# Third-party Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_INTERCOM_APP_ID=

# Development
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_MOCK_API_DELAY=500

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# For production, update the following:
# - VITE_API_BASE_URL to your production API endpoint
# - VITE_APP_ENVIRONMENT=production
# - VITE_ENABLE_DEBUG_TOOLS=false
# - VITE_ENABLE_ANALYTICS=true
# - VITE_ENABLE_ERROR_REPORTING=true
# - Set VITE_SENTRY_DSN for error tracking
# ===========================================
