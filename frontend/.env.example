# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_TITLE="White Cross"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Enterprise grade platform for school nurses"

# Environment
VITE_NODE_ENV=development
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Feature Flags
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_PWA=false

# Authentication
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_TOKEN_KEY=refresh_token
VITE_AUTH_TOKEN_EXPIRY_BUFFER=300000

# API Rate Limiting
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Caching
VITE_CACHE_TTL=300000
VITE_ENABLE_API_CACHE=true

# Logging
VITE_LOG_LEVEL=info
VITE_ENABLE_CONSOLE_LOGGING=true

# Third-party Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_INTERCOM_APP_ID=

# Development
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=false
VITE_MOCK_API_DELAY=500
