{
  "name": "@white-cross/reusable-function-library",
  "version": "1.0.0",
  "description": "Enterprise-grade reusable function library for White Cross healthcare platform",
  "main": "index.js",
  "scripts": {
    "qa:all": "npm run qa:validate && npm run qa:quality && npm run qa:health && npm run qa:test",
    "qa:validate": "ts-node scripts/validators/run-all-validators.ts",
    "qa:quality": "ts-node scripts/quality/quality-checks.ts",
    "qa:health": "ts-node scripts/health/health-check.ts",
    "qa:test": "jest --coverage",
    "qa:report": "ts-node scripts/reporting/generate-report.ts",
    "qa:metrics": "ts-node scripts/maintenance/kit-statistics.ts",
    "qa:duplicates": "ts-node scripts/maintenance/duplicate-detector.ts",
    "qa:fix": "npm run lint:fix && npm run format",
    "lint": "eslint '**/*.ts' --max-warnings 0",
    "lint:fix": "eslint '**/*.ts' --fix",
    "format": "prettier --write '**/*.ts'",
    "format:check": "prettier --check '**/*.ts'",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "clean": "rimraf dist coverage .qa-reports"
  },
  "keywords": [
    "nestjs",
    "healthcare",
    "hipaa",
    "enterprise",
    "reusable-functions",
    "white-cross"
  ],
  "author": "White Cross Healthcare",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.0.2",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/swagger": "^7.2.0",
    "sequelize-typescript": "^2.1.6",
    "zod": "^3.22.4",
    "express": "^4.18.2",
    "rxjs": "^7.8.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
