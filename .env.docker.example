# =============================================================================
# White Cross Healthcare Platform - Docker Environment Configuration
# Copy to .env.docker and update with your values
# =============================================================================

# =============================================================================
# APPLICATION
# =============================================================================
VERSION=latest
NODE_ENV=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_NAME=white_cross
DB_USER=white_cross_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
REDIS_PORT=6379

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
PORT=3001

# Security
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_SESSION_SECRET
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:8080

# Logging
LOG_LEVEL=info

# Features
ENABLE_SWAGGER=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=8080
VITE_API_BASE_URL=http://localhost:3001/api
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@whitecross.com

# =============================================================================
# MONITORING (Optional)
# =============================================================================
SENTRY_DSN=

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. NEVER commit this file with real secrets
# 2. Use strong, random passwords for DB and Redis
# 3. Use at least 32-character random strings for JWT secrets
# 4. Change SESSION_SECRET to a unique random string
# 5. In production, use Docker secrets or environment-specific secret management
